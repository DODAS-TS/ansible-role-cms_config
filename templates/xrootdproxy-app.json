{
  "id": "/xrootdproxy",
  "cmd": "/usr/local/bin/entrypoint proxy -redirector_url {{cms_config_proxycache_host}} -cmsd_redirector_port {{cms_cmsd_cache_redir_port}} -xrd_redirector_port {{cms_xrd_cache_redir_port}} -redirector_global {{cms_redir_global}} -redirector_global_port {{cms_redir_global_port}}",
  "cpus": 1,
  "mem": 2048,
  "disk": 0,
  "instances": 0,
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ], 
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/data/xrd",
        "hostPath": "/data/xrd",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "cloudpg/xrootd-proxy",
      "network": "HOST",
      "portMappings": [],
      "privileged": false,
      "parameters": [],
      "forcePullImage": true
    }
  },
  "env": {
    "PROXY_CACHE": "{{cms_config_proxycache_host}}:{{cms_config_proxycache_serviceport}}",
    "XrdSecGSISRVNAMES": "*"
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "delaySeconds": 15,
      "command": {
        "value": "ps faux | grep \"xrootd -d3\" || exit 1"
      },
      "protocol": "COMMAND"
    }
  ]
}